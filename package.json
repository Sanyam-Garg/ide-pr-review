{
  "name": "ide-pr-review",
  "displayName": "ide-pr-review",
  "description": "Review Github PRs entirely in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "SanyamGarg",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pr-review",
          "title": "PR Review",
          "icon": "$(git-pull-request)"
        }
      ]
    },
    "views": {
      "pr-review": [
        {
          "id": "pr-review-actions",
          "name": "Final Review",
          "icon": "$(check)",
          "type": "webview",
          "when": "idePrReview:prLoaded"
        },
        {
          "id": "pr-review-view",
          "name": "Review Files"
        }
      ]
    },
    "commands": [
      {
        "command": "ide-pr-review.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "idePrReview.openPR",
        "title": "PR Review: Open Pull Request"
      },
      {
        "command": "idePrReview.reply",
        "title": "Reply",
        "icon": "$(reply)"
      },
      {
        "command": "idePrReview.create",
        "title": "Add Comment",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "comments/commentThread/context": [
        {
          "command": "idePrReview.reply",
          "group": "inline",
          "when": "!commentThreadIsEmpty"
        },
        {
          "command": "idePrReview.create",
          "group": "inline",
          "when": "commentThreadIsEmpty"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}